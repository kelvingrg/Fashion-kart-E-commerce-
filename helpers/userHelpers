generateInvoice:async(orderId)=>{
let orderData=await db.get().collection(collection.ORDER_COLLECTION).aggregate(([
    {$match:{_id:ObjectId(orderId)}},
    {$unwind:"$products"},
    {$lookup:{
        from: "product",
                    localField: "products.item",
                    foreignField: "_id",
                    as: "prodData"  
             },
             
    },
    {$project: {
            item: "$products.item",
            quantity: 1,
            timeStamp:1,
            deliveryDetails:1,
            paymnetMethod:1,
            totalMrp:1,
            totalAmount:1,
            couponCodeApplied:1,
            couponDiiscount:1,
            finalAmount:1,
            status:1,
            refund:1,
        
            cancellation:1,
           quantity: "$products.quantity",
            product: {
                $arrayElemAt: ['$prodData', 0]
                    }
               }
    }, {$project: {
        item:1,
        quantity: 1,
        timeStamp:1,
        deliveryDetails:1,
        totalMrp:1,
        paymnetMethod:1,
        totalAmount:1,
        couponCodeApplied:1,
        couponDiiscount:1,
        finalAmount:1,
        status:1,
        uniqueTotalMrp:{$sum:{$multiply:[ {
            $toInt: '$quantity'
        }, {
            $toInt: '$product.regularPrice'
        }]}},
        uniqueTotalOfferPrice:{$sum:{$multiply:[ {
            $toInt: '$quantity'
        }, {
            $toInt: '$product.offerPrice'
        }]}},
        refund:1,
        cancellation:1,
       quantity: 1,
        product:1
           }
}



])).toArray()
console.log(orderData);
return orderData
},
allProducts:()=>{
    return new Promise(async (resolve,reject)=>{
      await  db.get().collection(collection.PRODUCT_COLLECTION).find({}).toArray().then((response)=>{
            resolve(response)
        })
    })
},
walletHistory:async(userId)=>{
 let wallet=  await db.get().collection(collection.WALLET_COLLECTION).findOne({userId:userId})
 return wallet
}

}

