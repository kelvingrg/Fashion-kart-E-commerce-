<div class="row" style="margin-top:12%">
  <div class="col-xl-12">
    <div class="card m-b-30">
      <div class="card-body">
        <h4 class="mt-0 header-title mb-4">Product List</h4>
        <div class="table-responsive">

          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Product Title</th>
                <th scope="col">Regular Price</th>
                <th scope="col">Offer Price</th>
                <th scope="col">Catagory</th>
                <th scope="col" >SubCatagory</th>
                <th scope="col">Tags</th>
                 <th scope="col">Product Decription</th>
                <th scope="col">Image</th>
                 <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              {{#each user}}
                <tr>
                  <td>{{this.firstName}}</td>
                  <td>{{this.lastName}}</td>
                  <td>{{this.mobileNumber}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.address}}</td>
                  <td>{{this.pinCode}}</td>
                  <td>{{this.city}}</td>
                    <td>{{this.country}}</td>
                  {{#if this.status}}
                    <td><span class="btn btn-success">Active</span></td>
                  {{else}}
                    <td><span  class="btn btn-secondary">Banned</span></td>
                    

                  {{/if}}

                  {{!-- <td>
                    <div>
                      <img
                        src="assets/images/users/user-2.jpg"
                        alt=""
                        class="thumb-md rounded-circle mr-2"
                      />
                      Philip Smead
                    </div>
                  </td> --}}

                  <td>
                    <div>
                      <a href="#" class="btn btn-primary btn-sm">Edit</a>
                      <a href="#" class="btn btn-danger btn-sm">Delete</a>
                      {{#if this.status}}
                        <a href="#" class="btn btn-warning btn-sm">Hold</a>
                      {{else}}
                        <a href="#" class="btn btn-success btn-sm">Unhold</a>
                      {{/if}}
                    </div>
                  </td>
                </tr>
              {{/each}}

            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

</div>