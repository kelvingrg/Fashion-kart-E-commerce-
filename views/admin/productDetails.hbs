<style>
    .text {
  display: block;
  width: 130px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}
span i:hover{
      transform: scale(1.5);
}
</style>
<script>
    $(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>


 <div class="row">
                <div class="col-12">
                    <div class="card m-b-30">
                        <div class="card-body">

                            
                            <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                   
                            
                                    <th scope="col">Product Title</th>
                                <th scope="col">Regular Price</th>
                                <th scope="col">Active Off %</th>
                                <th scope="col">Offer Price</th>
                                <th scope="col">Catagory</th>
                                <th scope="col">Sub Catagory</th>

                                <th scope="col">Product Decription</th>
                                <th scope="col">Image</th>
                                <th scope="col">Status</th>
                                <th></th>
                                    
                                </tr>
                                </thead>


                               <tbody>
                            {{#each productData}}
                                <tr>
                                   
                                    <td>{{ this.productTitle }}</td>
                                    <td>{{ this.regularPrice }}</td>
                                    <td>{{ this.offerPercentage}}</td>
                                    <td>{{ this.offerPrice }}</td>
                                    <td>{{ this.catagory }}</td>
                                    <td>{{ this.subCatagory }}</td>
                                  
                                    <td class="text">{{ this.productDescription}}</td>
<td><img style="width: 50px;height:50px" src="/{{ this.images.[0] }}" alt=""/>
                                    </td>

                                   
                             
                                 {{#if this.readyForSale}}
                                
                                   <td class="text-center" id='td{{this._id}}'><span style="color:green" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="click to  Deactivate" onclick="deactivateProduct('{{this._id}}')" id='span{{this._id}}'><i class="bi bi-patch-check-fill"></i></span></td>
                                
                            {{ else }}
                              
                                    <td class="text-center" id='td{{this._id}}'><span style="color:red" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="click to Activate" onclick="activateProduct('{{this._id}}')" id='span{{this._id}}'><i class="bi bi-patch-exclamation-fill" ></span></td>
                               
                                

                            {{/if}}


                                <td>
                                    <div>
                                        <a href="/admin/updateProduct/{{ this._id }}" ><i class="bi bi-pencil-square"></i></a>
                                        <a href="/admin/deleteProduct/{{ this._id }}" onclick="return confirm('Are you want to delete {{ this.firstName }} ?')"><i class="bi bi-trash"></i></a>
                                       
                                    </div>
                                </td>
                            </tr>
                        {{/each}}

                    </tbody>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

<div class="row" style="margin-top:12%">
