<script src="/javascripts/myjs/userSideAjasx.js"></script>
<div class="wrapper">
    <div
        class="container">
        <!-- Page-Title -->
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-12">
                    <h4 class="page-title m-5 text-center">Catagory offer Mangement</h4>

                    <div class="row">
                        <div class="col-md-6">

                            <button class="btn btn-dark" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" style="width:100%">
                                Add New Catagory offer
                            </button>
                        </p>
                        <div class="collapse" id="collapseExample">
                            <div class="card card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <select name="" id="cataName" class="text-center custom-form text-dark">

                                            <option value="select" select>
                                                Select a Catagory
                                            </option>
                                            {{#each cataData}}
                                                <option value={{this.catagory}} class="text-center">{{this.catagory}}</option>
                                            {{/each}}
                                        </select>
                                        <label for="">Enter the Percentage</label>
                                        <input type="text" class="custom-form" id="offerPercentage" value="">
                                        <div class="text-center">
                                            <button class="btn btn-dark" onclick="applyCatagoryOffer()">Apply Offer</button>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <!-- end row -->
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th class="text-center">Catagory</th>
                                <th class="text-center">Sub-Catagory</th>
                                <th class="text-center">Available Offer %</th>
                                <th class="text-center">Action</th>

                            </tr>
                        </thead>


                        <tbody>

                            {{#each cataData}}
                                <tr>
                                    <td class="text-center align-middle" id={{this._id}}>{{this.catagory}}</td>
                                    <td>
                                        <ul>
                                            {{#each this.subCatagory}}
                                                <li>
                                                    <i class="bi bi-arrow-right-circle"></i>
                                                    {{this}}</li>
                                            {{/each}}
                                        </ul>
                                    </td>
                                    <td class="text-center align-middle">{{this.offerPercentage}}</td>

                                    <td class="text-center align-middle">

                                        <button class="ml-2 btn btn-danger" type="submit" value="Delete" onclick="removeCatagoryOffer('{{this.catagory}}')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>
            </div>
        </div><!-- end col --></div><!-- end row --><!-- End Footer -->
    <!-- jQuery  -->
