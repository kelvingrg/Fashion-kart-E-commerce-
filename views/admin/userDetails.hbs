<div class="row" style="margin-top:12%">
  <div class="col-xl-12">
    <div class="card m-b-30">
      <div class="card-body">
        <h4 class="mt-0 header-title mb-4">Users List</h4>
        <a class="float-right" href="/admin/addUser"><button class="btn btn-success">Add User</button></a>
        <div class="table-responsive">

          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Mobile</th>
                <th scope="col">Email</th>
                <th scope="col" colspan="2">Address</th>
                <th scope="col">Pincode</th>
                 <th scope="col">City</th>
                <th scope="col">Country</th>
                 <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              {{#each user}}
                <tr>
                  <td>{{this.firstName}}</td>
                  <td>{{this.lastName}}</td>
                  <td>{{this.mobileNumber}}</td>
                  <td>{{this.email}}</td>
                  <td scope="col" colspan="2">{{this.address}}</td>
                  <td>{{this.pinCode}}</td>
                  <td>{{this.city}}</td>
                    <td>{{this.country}}</td>
                  {{#if this.status}}
                    <td><span class="btn btn-success">Active</span></td>
                  {{else}}
                    <td><span  class="btn btn-secondary">Banned</span></td>

                  {{/if}}

                  {{!-- <td>
                    <div>
                      <img
                        src="assets/images/users/user-2.jpg"
                        alt=""
                        class="thumb-md rounded-circle mr-2"
                      />
                      Philip Smead
                    </div>
                  </td> --}}

                  <td>
                    <div>
                      <a href="/admin/updateUser/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
                      <a href="/admin/deleteUser/{{this._id}}" class="btn btn-danger btn-sm"  onclick="return confirm('Are you want to delete {{this.FirstName}} ?')">Delete</a>
                      {{#if this.status}}
                        <a href="/admin/banUser/{{this._id}}" class="btn btn-warning btn-sm">Ban</a>
                      {{else}}
                        <a href="/admin/unbanUser/{{this._id}}" class="btn btn-success btn-sm" onclick="return confirm('Are you sure to Ban {{this.firstName}} ?')">Unban</a>
                      {{/if}}
                    </div>
                  </td>
                </tr>
              {{/each}}

            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

</div>