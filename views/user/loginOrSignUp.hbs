<section class="page-content">
		
			<!-- PAGE-BANNER END -->
			<!-- LOGIN-AREA START -->
			<div class="lognin-area">
				<div class="container">
					<div class="row">
						<!-- Registered-Customers Start -->
						<div class="col-md-6">
							<form action="/login" method="POST">
								<div class="registered-customers">
									<h2 class="login-title">REGISTERED CUSTOMERS</h2>
									<div class="registered">
										<p>If you have an account with us, Please log in.</p>
										<div class="row">
											<div class="col-md-12">
												<input type="text" class="custom-form" name="email" placeholder="Email Address"   />
											</div>
										</div>
										<div class="row">
											<div class="col-md-12">
												<input type="password" class="custom-form" placeholder="Password" name="password" />
											</div>
											{{#if logerr}}<label for="mobileNumber" style="color: red;">invalid credentials</label>{{/if}}
												{{#if blocked}}<label for="mobileNumber" style="color: red;">You have been blocked please contact Customer Care</label>{{/if}}
										</div>
										<p><label class="forgot"><a href="#">Forgot your password?</a></label></p>
										<input type="submit" class="custom-submit-2" value="login" />
									<a href="/loginWithOtp"><span class="custom-submit-2" onclick="otpPage()"  style="margin-left:40%"/>Login With Otp</span></a>

										
									</div>
								</div>
							</form>

							
						

						{{!-- otp login start --}}

							
						</div>
						{{!-- otp login end --}}
						<!-- Registered-Customers End -->
						<div class="col-md-6">
							<form action="/signup" method="POST">
								<div class="new-customers">
									<h2 class="login-title">NEW CUSTOMERS</h2>
									<div class="row">
										<div class="col-sm-6">
											<input type="text" class="custom-form" placeholder="First Name" name="firstName"  id="firstName" onfocusout="validateFirstName()" required/>
											<label for="fisrtName" id="labelname"  style="color:green"></i></label>
											
										</div>
										<div class="col-sm-6">
											<input type="text" class="custom-form" placeholder="Last Name" name="lastName" id="lastName" onfocusout="validateSecondName()" required/>
											<label for="fisrtName" id="labellastname" display="none"></label>
										</div>

										
										
									</div>
									<div class="row">
										<div class="col-sm-12">
											<input type="text" class="custom-form" placeholder="address" name="address" required/>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-6">
											<input type="text" class="custom-form" placeholder="City" name="city" />
										</div>
										<div class="col-sm-6">
											<input type="text" class="custom-form" placeholder="country" name="country" />
										</div>
									</div>
									<div class="row">
										<div class="col-sm-6">
											<input type="text" class="custom-form" placeholder="mobileNumber" name="mobileNumber" id="mobileNumber"onfocusout="validateNumber()" required/>
											<label for="mobileNumber" id="labelMobile" ></label>
											
										</div>
										<div class="col-sm-6">
											<input type="text" class="custom-form" placeholder="pinCode" name="pinCode" id="pinCode"onfocusout="validatePinCode()" required />
											<label for="mobileNumber" id="labelPin" ></label>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-12">
											<input class="custom-form" type="text" placeholder="Email" name="email" required />
										</div>
									</div>
									<div class="row">
										<div class="col-sm-12">
											<input class="custom-form" type="password" placeholder="Password"name="password" id="password" onkeyup="validatePassword()" required/>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-12">
											<input class="custom-form" type="password" placeholder="Confirm Password" id="confirmPassword" onfocusout="validatePassword()" required/>
											<label for="text" id="labelPassword" style="    font-weight: normal;" ></label>
										</div>
									</div>
									<div class="row">
										<div class="col-sm-12">
											<label for="text" id="labelPassword" >Enter Referal code here and fill Your wallet</label>
											<input class="custom-form" type="text" placeholder="Referal Code" id="referalCode" name="referalCode" />
											
										</div>
									</div>
								
									<div class="row">
										<div class="col-sm-6">
											<input type="submit" class="custom-form custom-submit no-margin" value="register" onclick="return validateSubmission()"\/>
											<label for="text" id="labelSubmission" ></label>
											{{#if phoneerr}}<label for="mobileNumber" style="color: red;">Mobile Number Already exists</label>{{/if}}
											{{#if emailerr}}<label for="email" style="color: red;">Email Already exists</label>{{/if}}
										</div>

										
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- LOGIN-AREA END -->
			
		
		
